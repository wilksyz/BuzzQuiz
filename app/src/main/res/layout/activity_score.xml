<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Controller.ScoreActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/activity_score_text_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Score"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/activity_score_text_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No_Score"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:layout_below="@+id/activity_score_text_1"/>

        <TextView
            android:id="@+id/activity_score_text_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Score"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:layout_below="@+id/activity_score_text_2"/>

        <TextView
            android:id="@+id/activity_score_text_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Score"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:layout_below="@+id/activity_score_text_3"/>

        <TextView
            android:id="@+id/activity_score_text_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Score"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:layout_below="@+id/activity_score_text_4"/>

        <Button
            android:id="@+id/activity_score_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_below="@+id/activity_score_text_5"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/activity_score_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Score"
            android:layout_below="@+id/activity_score_text_5"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>
</ScrollView>